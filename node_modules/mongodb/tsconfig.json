{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": ["ES2020"],
    
    // Ensures correct import behavior for type-only imports
    "importsNotUsedAsValues": "remove",

    // We don't make use of tslib helpers, all syntax used is supported by target engine
    "importHelpers": false,
    "noEmitHelpers": true,

    // Never emit files if there are errors
    "noEmitOnError": true,
    "outDir": "lib",

    // Keeps source maps separate
    "inlineSourceMap": false,
    "sourceMap": true,

    // Generate TypeScript declaration files for API-Extractor
    "declaration": true,
    "declarationMap": true,

    // Prevents unnecessary inclusion of inline sources
    "inlineSources": false,

    // Ensures correct TypeScript types are used
    "types": ["node"],

    // Enforces best practices in TypeScript
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,

    // Improves error handling in `catch` statements
    "useUnknownInCatchVariables": true
  },
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript"
  },
  "include": ["src/**/*"]
}
